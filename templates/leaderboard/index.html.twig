{% extends 'base.html.twig' %}

{% block title %}Leaderboard - {{ challenge.name }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* For projection mode */
        @media (min-width: 1200px) {
            .leaderboard-table {
                font-size: 1.5rem;
            }
            .leaderboard-table td, .leaderboard-table th {
                padding: 1rem 1.5rem;
            }
        }
        /* Mobile optimizations */
        @media (max-width: 767px) {
            .display-5 {
                font-size: 1.5rem;
            }
            .table td, .table th {
                padding: 0.5rem;
            }
            .leaderboard-table .fs-4 {
                font-size: 1.25rem !important;
            }
            .leaderboard-table .fs-5 {
                font-size: 1rem !important;
            }
        }
    </style>
{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="text-center mb-4">
        <h1 class="display-5">{{ challenge.name }}</h1>
        <span class="badge bg-dark fs-5 font-monospace"
              data-controller="timer"
              data-timer-end-time-value="{{ challenge.endDate.timestamp }}"
              data-timer-start-time-value="{{ challenge.startDate.timestamp }}">
            --:--:--
        </span>
    </div>

    {% if challenge.isUpcoming %}
        <div class="alert alert-info text-center">
            <h4>‚è≥ Challenge a venir</h4>
            <p>Le classement sera affiche au demarrage du challenge</p>
            <span class="badge bg-dark fs-4 font-monospace"
                  data-controller="timer"
                  data-timer-end-time-value="{{ challenge.startDate.timestamp }}"
                  data-timer-start-time-value="{{ challenge.startDate.timestamp }}">
                --:--:--
            </span>
        </div>
    {% else %}
        {% if challenge.isEnded %}
            <div class="alert alert-secondary text-center mb-4">
                <strong>‚è±Ô∏è CHALLENGE TERMINE - Classement final</strong>
            </div>
        {% endif %}

        <div class="card">
            <div class="card-body p-0">
                <table class="table table-hover mb-0 leaderboard-table">
                    <thead class="table-dark">
                        <tr>
                            <th class="text-center" style="width: 80px">Rang</th>
                            <th>Equipe</th>
                            <th class="text-end" style="width: 120px">Score</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for entry in rankedTeams %}
                        <tr>
                            <td class="text-center fs-4">
                                {% if entry.rank == 1 %}ü•á
                                {% elseif entry.rank == 2 %}ü•à
                                {% elseif entry.rank == 3 %}ü•â
                                {% else %}#{{ entry.rank }}
                                {% endif %}
                            </td>
                            <td class="fs-5">{{ entry.team.name }}</td>
                            <td class="text-end font-monospace fs-5">{{ entry.team.score }} pts</td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="3" class="text-center text-muted py-4">
                                Aucune equipe inscrite
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}

    <div class="d-flex justify-content-between align-items-center mt-4">
        <span class="text-muted">üö© {{ totalFlags }} flags disponibles</span>
        <div>
            <a href="{{ path('app_dashboard') }}" class="btn btn-outline-primary me-2">
                Dashboard
            </a>
            <a href="{{ path('app_leaderboard') }}" class="btn btn-outline-secondary">
                üîÑ Actualiser
            </a>
        </div>
    </div>
</div>
{% endblock %}
